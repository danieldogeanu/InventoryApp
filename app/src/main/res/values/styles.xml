<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorNevadaGray</item>
        <item name="android:textColor">@color/colorAltoWhite</item>
        <item name="android:textColorSecondary">@color/colorAltoTransparent</item>
        <item name="android:textColorPrimaryInverse">@color/colorNevadaGray</item>
        <item name="android:textColorSecondaryInverse">@color/colorSilverChalice</item>
    </style>

    <style name="InventoryActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="InventoryList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>
    <style name="InventoryFab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="EditorActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="EditorLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="SectionContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
    <style name="SectionTitleLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/colorAltoTransparent</item>
    </style>
    <style name="SectionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorAltoTransparent</item>
        <item name="android:background">@color/colorNevadaGray</item>
    </style>
    <style name="FieldsContainer">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="FieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorAltoWhite</item>
        <item name="android:textColorHint">@color/colorAltoTransparent</item>
        <item name="android:background">@drawable/bg_edit_field</item>
    </style>
    <style name="FieldUnitOverlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAltoTransparent</item>
    </style>
    <style name="PriceFieldContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="PriceFieldStyle" parent="FieldStyle">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

</resources>
