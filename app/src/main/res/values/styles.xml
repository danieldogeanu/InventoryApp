<resources>
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorNevadaGray</item>
        <item name="android:textColor">@color/colorAltoWhite</item>
        <item name="android:textColorSecondary">@color/colorAltoTransparent</item>
        <item name="android:textColorPrimaryInverse">@color/colorNevadaGray</item>
        <item name="android:textColorSecondaryInverse">@color/colorSilverChalice</item>
    </style>

    <style name="InventoryActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="InventoryList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="FabButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="EditorActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="EditorLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="SectionContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
    <style name="SectionTitleLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/colorTransparentWhite</item>
    </style>
    <style name="SectionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorAltoTransparent</item>
        <item name="android:background">@color/colorNevadaGray</item>
    </style>

    <style name="FieldsContainer">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="FieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorAltoWhite</item>
        <item name="android:textColorHint">@color/colorAltoTransparent</item>
        <item name="android:background">@drawable/bg_edit_field</item>
    </style>
    <style name="FieldUnitOverlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAltoTransparent</item>
    </style>
    <style name="PriceFieldContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="PriceFieldStyle" parent="FieldStyle">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="DetailsActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="DetailsLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="DetailsCard">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/card_bg</item>
    </style>
    <style name="DetailsRow">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="DetailsText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAltoWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="DetailsTextProductTitle" parent="DetailsText">
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:maxLines">4</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="DetailsTextSupplierTitle" parent="DetailsTextProductTitle">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="DetailsTextMain" parent="DetailsText">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end</item>
    </style>
    <style name="DetailsTextLabel" parent="DetailsText">
        <item name="android:layout_width">80dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAltoTransparent</item>
    </style>
    <style name="DetailsTextButtonsLabel" parent="DetailsTextLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="DetailsCardSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:background">@color/colorTransparentWhite</item>
    </style>
    <style name="DetailsImageButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>
    <style name="ItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/item_bg</item>
    </style>
    <style name="ItemTopLeftSection">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>
    <style name="ItemTopRightSection">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>
    <style name="ItemBottomSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="ItemSectionDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@color/colorTransparentWhite</item>
    </style>
    <style name="ItemProductLeftText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ItemProductName" parent="ItemProductLeftText">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorAltoWhite</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ItemProductAuthor" parent="ItemProductLeftText">
        <item name="android:textColor">@color/colorAltoTransparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="ItemProductRightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="ItemProductPrice" parent="ItemProductRightText">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textColor">@color/colorAltoWhite</item>
    </style>
    <style name="ItemProductQuantity" parent="ItemProductRightText">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@color/colorAltoTransparent</item>
    </style>
    <style name="ItemSupplierText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="ItemSupplierName" parent="ItemSupplierText">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textColor">@color/colorAltoWhite</item>
    </style>
    <style name="ItemSupplierPhone" parent="ItemSupplierText">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textColor">@color/colorAltoTransparent</item>
    </style>
    <style name="ItemSaleButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:background">@drawable/sale_btn_bg</item>
        <item name="android:textColor">@color/colorAltoTransparent</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
